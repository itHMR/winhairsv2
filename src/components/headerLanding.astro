---
import Logo from "../components/logo.astro";
import Logo2 from "../components/logo2.astro";
import "../styles/global.css";
---

<header id="header" class="z-60 fixed top-0 w-full py-6 sm:py-8 px-4 sm:px-8 transition-colors duration-400">
    <div class="flex flex-wrap justify-between items-center">
        <!-- relative block aspect-[370/66] h-[44px] sm:h-[50px] lg:h-[56px] xl:h-[66px] -->
        <a href="/" class="relative block aspect-[370/66] h-[44px] xl:h-[66px]">
            <Logo id="logo1" class="absolute inset-0 transition-all duration-400 opacity-100 scale-100" />
            <Logo2 id="logo2" class="absolute inset-0 transition-all duration-400 opacity-0 scale-90" />
        </a>

        <div class="flex items-center lg:order-2">
            <!-- MenÃº de escritorio -->
            <div class="hidden md:flex items-center lg:order-2 space-x-4">
                <a class="px-2 text-white hover:text-[#376374] duration-300" href="https://instagram.com/winhairs_" target="_blank" aria-label="Instagram">
                    <i class="fab fa-instagram"></i>
                </a>
                <a class="px-2 text-white hover:text-[#376374] duration-300" href="http://facebook.com/winhairtransplant" target="_blank" aria-label="Facebook">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a href="#aboutUs" class="ml-4 font-[Poppins] py-3 px-5 text-sm bg-[#376374] text-white rounded-lg cursor-pointer font-semibold text-center shadow-xs transition-all duration-500 hover:bg-[#547785]">
                    Book an appointment
                </a>
            </div>
            <button id="btnHeader" data-collapse-toggle="mobile-menu-2" type="button" class="inline-flex items-center p-2 ml-1 text-sm text-white rounded-lg lg:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 mt-2 sm:mt-0" aria-controls="mobile-menu-2" aria-expanded="false">
                <span class="sr-only">Open main menu</span>
                <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path></svg>
                <svg class="hidden w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
            </button>
        </div>
        <div class="lg:hidden justify-between items-center w-full flex order-1 hidden" id="mobilemenu2">
            <ul class="flex flex-col mt-4 font-medium lg:flex-row lg:space-x-8 lg:mt-0 w-full">
                <li>
                    <a href="#home" class="block py-4 pr-4 pl-3 text-white border-b border-gray-100 bg-primary-700 lg:bg-transparent lg:text-primary-700 lg:p-0">Home</a>
                </li>
                <li>
                    <a href="#info" class="block py-4 pr-4 pl-3 text-white border-b border-gray-100 lg:border-0 lg:p-0">About us</a>
                </li>
                <li>
                    <a href="#results" class="block py-4 pr-4 pl-3 text-white border-b border-gray-100 lg:border-0 lg:p-0">Results</a>
                </li>
                <li>
                    <a href="#price" class="block py-4 pr-4 pl-3 text-white border-b border-gray-100 lg:border-0 lg:p-0">Price</a>
                </li>
                <li>
                    <a href="#techniques" class="block py-4 pr-4 pl-3 text-white border-b border-gray-100 lg:border-0 lg:p-0">Techniques</a>
                </li>
                <li>
                    <a href="#questions" class="block py-4 pr-4 pl-3 text-white border-b border-gray-100 lg:border-0 lg:p-0">Questions</a>
                </li>
                <li>
                    <a href="#aboutUs" class="block py-4 pr-4 pl-3 text-white border-b border-gray-100 lg:border-0 lg:p-0">Contact us</a>
                </li>
            </ul>
        </div>
    </div>
</header>

<script>
  const header = document.querySelector("#header");
  const logo1 = document.querySelector("#logo1");
  const logo2 = document.querySelector("#logo2");
  const btn = document.getElementById("btnHeader");
  const headermobile = document.getElementById("mobilemenu2");

  // ðŸ‘‰ Toggle menÃº mÃ³vil
  btn.addEventListener("click", () => {
    headermobile.classList.toggle("hidden");
    header.classList.toggle("menu-bg");
    header.classList.toggle("shadow-md");
  });

  // ðŸ‘‰ Cerrar menÃº al hacer click en un link
  const menuLinks = headermobile.querySelectorAll("a");
  menuLinks.forEach(link => {
    link.addEventListener("click", () => {
      headermobile.classList.add("hidden");
      header.classList.remove("menu-bg");
    });
  });

  // ðŸ‘‰ ConfiguraciÃ³n del IntersectionObserver
  const observerOptions = {
    root: null,
    rootMargin: "0px",
    threshold: 0.9
  };

  const observer = new IntersectionObserver(entries => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const color = entry.target.getAttribute("data-header-color");
        const logo = entry.target.getAttribute("data-header-logo");

        header.style.backgroundColor = color || "";

        if (logo === "1") {
          logo1.classList.add("opacity-100", "scale-100");
          logo1.classList.remove("opacity-0", "scale-90");

          logo2.classList.remove("opacity-100", "scale-100");
          logo2.classList.add("opacity-0", "scale-90");
        } else {
          logo2.classList.add("opacity-100", "scale-100");
          logo2.classList.remove("opacity-0", "scale-90");

          logo1.classList.remove("opacity-100", "scale-100");
          logo1.classList.add("opacity-0", "scale-90");
        }
      }
    });
  }, observerOptions);

  // ðŸ‘‰ Observar secciones con atributos especiales
  document.querySelectorAll("section[data-header-color]").forEach(sec => {
    observer.observe(sec);
  });
</script>