<script>
  const header = document.querySelector("#header");
  const logo1 = document.querySelector("#logo1");
  const logo2 = document.querySelector("#logo2");
  const btn = document.getElementById("btnHeader");
  const headermobile = document.getElementById("mobilemenu2");

  // üëâ Toggle men√∫ m√≥vil
  btn.addEventListener("click", () => {
    headermobile.classList.toggle("hidden");
    header.classList.toggle("menu-bg");
    header.classList.toggle("shadow-md");
  });

  // üëâ Cerrar men√∫ al hacer click en un link
  const menuLinks = headermobile.querySelectorAll("a");
  menuLinks.forEach(link => {
    link.addEventListener("click", () => {
      headermobile.classList.add("hidden");
      header.classList.remove("menu-bg");
    });
  });

  // üëâ Configuraci√≥n del IntersectionObserver
  const observerOptions = {
    root: null,
    rootMargin: "0px",
    threshold: 0.5
  };

  const observer = new IntersectionObserver(entries => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const color = entry.target.getAttribute("data-header-color");
        const logo = entry.target.getAttribute("data-header-logo");

        header.style.backgroundColor = color || "";

        if (logo === "1") {
          logo1.classList.add("opacity-100", "scale-100");
          logo1.classList.remove("opacity-0", "scale-90");

          logo2.classList.remove("opacity-100", "scale-100");
          logo2.classList.add("opacity-0", "scale-90");
        } else {
          logo2.classList.add("opacity-100", "scale-100");
          logo2.classList.remove("opacity-0", "scale-90");

          logo1.classList.remove("opacity-100", "scale-100");
          logo1.classList.add("opacity-0", "scale-90");
        }
      }
    });
  }, observerOptions);

  // üëâ Observar secciones con atributos especiales
  document.querySelectorAll("section[data-header-color]").forEach(sec => {
    observer.observe(sec);
  });
</script>