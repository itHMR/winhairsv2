---
import "../styles/global.css";
---
<section id="price" data-header-color="transparent" data-header-logo="1" class="bg-[#4E7881] h-screen w-screen relative flex flex-col items-center justify-center px-6 py-8 md:px-12 lg:px-14 xl:px-32 md:py-14 xl:py-24">
    <h2 data-animation="animate__pulse" class="animate__animated text-4xl md:text-5xl xl:text-6xl font-medium font-[Poppins] mt-8 lg:mt-12 mb-2 text-center md:text-right text-white">We're kind of a big deal</h2>
    <h3 data-animation="animate__pulse" class="animate__animated text-xl md:text-2xl xl:text-3xl font-light font-[Poppins] mb-8 lg:mb-12 text-center md:text-right text-white">according to Google Reviews</h3>
    <!-- Elfsight Google Reviews | Untitled Google Reviews -->
    <script is:inline type="module" src="https://elfsightcdn.com/platform.js" async></script>
    <div class="elfsight-app-5cee13ba-444b-49d5-8f46-685245f008d8" data-elfsight-app-lazy></div>
</section>

<!-- Script para ocultar el enlace -->
<script>
  function hideElfsightLink() {
    const links = document.querySelectorAll('.elfsight-app-5cee13ba-444b-49d5-8f46-685245f008d8 a[href*="elfsight.com"]');
    links.forEach(link => (link.style.display = 'none'));
  }

  // Intentar ocultarlo cada 500 ms por 5 segundos
  let tries = 0;
  const interval = setInterval(() => {
    hideElfsightLink();
    tries++;
    if (tries > 10) clearInterval(interval);
  }, 500);