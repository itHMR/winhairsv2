---
import Header from "../components/headerLanding.astro";
import Hero from "../components/heroSection.astro";
import Info from "../components/info.astro";
import Slider from "../components/sliderSection.astro";
import Price from "../components/price.astro";
import Tech from "../components/technique.astro";
import Question from "../components/questions.astro";
import "../styles/global.css";
import Form from "../components/form.astro";
import Footer from "../components/footer.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Winhair - Hair transplant Clinic</title>
		<meta name="description" content="Discover Winhair’s Hair Loss Permanent and Safe Solution. We're specializing in hair loss, hair restoration and hair transplantation. Don't waste your time traveling to India or Turkey, our amazing results with neograft hair transplant are here.">

		<!-- Autor -->
		<meta name="author" content="David Díaz">

		<!-- SEO para Google -->
		<link rel="canonical" href="https://winhairs.com">

		<!-- Redes Sociales (Open Graph) -->
		<meta property="og:title" content="Winhair - Hair transplant Clinic">
		<meta property="og:description" content="Discover Winhair’s Hair Loss Permanent and Safe Solution. We're specializing in hair loss, hair restoration and hair transplantation. Don't waste your time traveling to India or Turkey, our amazing results with neograft hair transplant are here.">
		<meta property="og:image" content="https://winhairs.com/winhair-logo.webp">
		<meta property="og:url" content="https://winhairs.com">
		<meta property="og:type" content="website">
		
		<!-- Icon Font Stylesheet -->
		<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.0/css/all.min.css" rel="stylesheet">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
		<!-- Google Web Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
		<!-- Google Web Fonts -->
		<link type="text/css" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Google+Sans:400,500,700|Google+Sans+Text:400,500,700&amp;lang=es">
		<link type="text/css" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Google+Sans+Text:400&amp;text=%E2%86%90%E2%86%92%E2%86%91%E2%86%93&amp;lang=es">
		<!-- Cargar SweetAlert2 desde un CDN -->
		<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11" is:inline defer></script>
	</head>
	<body>
		<Header/>
		
		<main class="snap-y snap-mandatory relative w-full h-screen overflow-auto scroll-smooth">
			<div class="snap-center">
				<Hero />
			</div>
			<div class="snap-center">
				<Info />
			</div>
			<div class="snap-center">
				<Slider />
			</div>
			<div class="snap-center">
				<Price />
			</div>
			<div class="snap-center">
				<Tech />
			</div>
			<div class="snap-center">
				<Question />
			</div>
			<div class="snap-center hidden md:block">
				<Form />
				<Footer />
			</div>
			<div class="snap-center block md:hidden">
				<Form />
			</div>
			<div class="snap-center block md:hidden">
				<Footer />
			</div>
		</main>
		<script is:inline type="module">
			// Seleccionamos todos los elementos que queremos animar
			const elementos = document.querySelectorAll('.animate__animated');

			// Creamos el observador
			const observer = new IntersectionObserver((entries, observer) => {
				entries.forEach(entry => {
					if (entry.isIntersecting) 
					{
						const animacion = entry.target.dataset.animation;
      
						// Quitamos la animación si ya la tenía (para reiniciarla)
      					//entry.target.classList.remove(animacion);

						// Forzamos un reflow para que el navegador "olvide" la animación
      					//void entry.target.offsetWidth;

						// Lo agregamos como clase
						entry.target.classList.add(animacion);
						
						// Evitamos que se vuelva a animar (Si se desea volver a animar se debe de comentar)
						observer.unobserve(entry.target);

					}
				});
				}, {
				threshold: 0.2 // Se activa cuando el 20% del elemento es visible
			});

			// Observamos cada elemento
			elementos.forEach(el => observer.observe(el));
		</script>
	</body>
</html>
